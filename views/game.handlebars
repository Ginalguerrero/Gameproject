{{#with game}}
<div class="images">
  <div class="container-image">
    <img class="primary" id="primary" src="{{game_image}}" alt="{name}}" />
    <div class="info">
      <h2><span class="game_titles">GAME:</span> {{name}}</h2>
      <p><span class="game_titles">Publisher:</span> {{publisher}}</p>
      <p><span class="game_titles">Platforms:</span> {{platform}}</p>
      <p class="game_titles">Categories:</p>
      <div class="list">
        {{{format_list categories}}}
      </div>
      <p class="game_titles">Genres</p>
      <div class="list">
        {{{format_list genres}}}
      </div>
      <p class="game_titles">game_type</p>
      <div class="list">
        {{{format_list game_type}}}
      </div>
    </div>
  </div>
<div id="screenShots">
    {{#each screenshots as |image|}}
      <img src="{{image.img_url}}" alt="{{name}}" />
    {{/each}}
</div>

</div>
<div class="description">
  <h3>Description:</h3>
  <p>{{description}}</p>
</div>

 <div class="comments">
  {{#if comments}}
  {{#each comments}}
    {{>comments}}
  {{/each}}
  {{/if}}
</div>

{{/with}} 

 <script src="/js/screenshots.js"></script>
